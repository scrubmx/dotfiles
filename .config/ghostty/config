# Ghostty Terminal Emulator Configuration
# https://ghostty.org/docs/config
#
# Reloading the Configuration:
# ctrl+shift+, (Linux) or cmd+shift+, (macOS)
title = " "
minimum-contrast = 1.1
window-decoration = true
window-colorspace = display-p3
# macos-option-as-alt = true
macos-titlebar-proxy-icon = hidden
macos-titlebar-style = transparent
link-url = true

# https://ghostty.org/docs/config/reference#theme
# To see a list of available themes, run `ghostty +list-themes`
theme = Catppuccin Mocha
background = 11111b
background-opacity = 0.90
background-blur-radius = 40
alpha-blending = native

# https://monaspace.githubnext.com
# To see a list of available fonts, run `ghostty +list-fonts`
# font-family = "JetBrains Mono"
# font-family = "Fira Code Retina"
font-family = "Monaspace Neon"
# font-family = "Monaspace Neon Var"
font-size = 15
font-thicken = false

# https://monaspace.githubnext.com/#code-ligatures
font-feature = calt
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = ss04
font-feature = ss05
font-feature = ss06
font-feature = ss07
font-feature = ss09
font-feature = cv30
font-feature = cv60

adjust-cell-height = 4
adjust-cell-width = 0
adjust-font-baseline = -1
adjust-underline-position = 1
grapheme-width-method = unicode

# https://ghostty.org/docs/config/reference#cursor-color
cursor-color = bac2de
cursor-style = block
cursor-text = 020204
mouse-hide-while-typing = true

# Custom Keybindings
# https://ghostty.org/docs/config/keybind
# To see a list of available keybinds, run `ghostty +list-keybinds`

# Cmd+1 -> Esc <Leader>1
keybind = cmd+digit_1=text:\x1b,1

# Cmd+p -> Esc <Leader>ff
keybind = cmd+p=esc:,ff

# Cmd+r -> Esc <Leader>fi
keybind = cmd+r=text:\x1b,fi

# Cmd+g -> Esc <Leader>fg
keybind = cmd+g=text:\x1b,fg

# Cmd+b -> Esc <Leader>fb
keybind = cmd+b=text:\x1b,fb
